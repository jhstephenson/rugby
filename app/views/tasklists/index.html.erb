<h1>Tasks</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>User</th>
      <th>Client</th>
      <th>Project</th>
      <th>Taskname</th>
      <th>Status</th>
      <th>Estimated Time</th>
      <th>Start date</th>
      <th>Date needed by</th>
      <th>Date Completed</th>
      <th>Actual Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasklists.each do |tasklist| %>
      <tr>
        <td>
          <% unless tasklist.user.blank? %>
            <%= tasklist.user.name %>
          <% end %>
        </td>
        <td>
          <% unless tasklist.client.blank? %>
            <%= tasklist.client.name %>
          <% end %>
        </td>
        <td>
          <% unless tasklist.project.blank? %>
            <%= tasklist.project.name %>
          <% end %>
        </td>

        <td><%= tasklist.taskname %></td>

        <td>
          <% unless tasklist.status.blank? %>
            <%= tasklist.status.status %>
          <% end %>
        </td>

        <td><%= tasklist.estimated_time_to_complete %></td>
        <td><%= tasklist.start_date %></td>
        <td><%= tasklist.date_needed_by %></td>
        <td><%= tasklist.actual_date_completed %></td>
        <td><%= tasklist.actual_time_to_complete %></td>
        <td>
          <%= link_to tasklist do %>
            <span class="glyphicon glyphicon-search"></span>
          <%- end -%>
        </td>
        <td>
          <%= link_to edit_tasklist_path(tasklist) do %>
            <span class="glyphicon glyphicon-edit"></span>
          <%- end -%>
        </td>
        <td>
          <%= link_to tasklist, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tasklist', new_tasklist_path %>
