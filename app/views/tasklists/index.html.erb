<p id="notice"><%= notice %></p>

<h1>Listing Tasklists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Client</th>
      <th>Project</th>
      <th>Taskname</th>
      <th>Description</th>
      <th>Status</th>
      <th>Estimated time to complete</th>
      <th>Start date</th>
      <th>Date needed by</th>
      <th>Actual date completed</th>
      <th>Actual time to complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasklists.each do |tasklist| %>
      <tr>
        <td><%= tasklist.user %></td>
        <td><%= tasklist.client %></td>
        <td><%= tasklist.project %></td>
        <td><%= tasklist.taskname %></td>
        <td><%= tasklist.description %></td>
        <td><%= tasklist.status %></td>
        <td><%= tasklist.estimated_time_to_complete %></td>
        <td><%= tasklist.start_date %></td>
        <td><%= tasklist.date_needed_by %></td>
        <td><%= tasklist.actual_date_completed %></td>
        <td><%= tasklist.actual_time_to_complete %></td>
        <td><%= link_to 'Show', tasklist %></td>
        <td><%= link_to 'Edit', edit_tasklist_path(tasklist) %></td>
        <td><%= link_to 'Destroy', tasklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

