<%= simple_form_for(@daily_activity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.association :client, collection: Client.order(:name), prompt: "Choose a Client" %>
    <%= f.association :user %>
    <%= f.input :hours %>
    <%= f.input :description %>
    <%= f.input :billable %>
    <%= f.input :rate %>
    <%= f.association :project %>
    <%= f.input :merged %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
