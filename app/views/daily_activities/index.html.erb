<p id="notice"><%= notice %></p>

<h1>Listing Daily Activities</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Client</th>
      <th>User</th>
      <th>Hours</th>
      <th>Description</th>
      <th>Billable</th>
      <th>Rate</th>
      <th>Project</th>
      <th>Merged</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_activities.each do |daily_activity| %>
      <tr>
        <td><%= daily_activity.date %></td>

        <td>
          <% unless daily_activity.client.blank? %>
            <%= daily_activity.client.name %>
          <% end %>
        </td>
        <td>
          <% unless daily_activity.user.blank? %>
            <%= daily_activity.user.name %>
          <% end %>
        </td>

        <td><%= daily_activity.hours %></td>
        <td><%= daily_activity.description %></td>
        <td><%= daily_activity.billable %></td>
        <td><%= daily_activity.rate %></td>
        <td><%= daily_activity.project %></td>
        <td><%= daily_activity.merged %></td>
        <td><%= link_to 'Show', daily_activity %></td>
        <td><%= link_to 'Edit', edit_daily_activity_path(daily_activity) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

