<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Started on</th>
      <th>Completed on</th>
      <th>Estimated completion</th>
      <th>Estimated hours</th>
      <th>Actual hours</th>
      <th>User</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.started_on.strftime("%m/%d/%Y") %></td>
        <td><%= project.completed_on.strftime("%m/%d/%Y") %></td>
        <td><%= project.estimated_completion.strftime("%m/%d/%Y") %></td>
        <td><%= project.estimated_hours %></td>
        <td><%= project.actual_hours %></td>

        <td>
          <% unless project.user.blank? %>
            <%= project.user.name %>
          <% end %>
        </td>
        <td>
          <% unless project.client.blank? %>
              <%= project.client.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

